<Window x:Class="ChatRoomWindow.PresentationLayer.Loading"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatRoomWindow.PresentationLayer"
        mc:Ignorable="d"
        Title="Loading" Height="350" Width="300" WindowStyle="None">
    <Window.Background>
        <ImageBrush ImageSource="images/mainBg.png"/>
    </Window.Background>
    <TextBlock x:Name ="Joke" Visibility="Visible" HorizontalAlignment="Center" Text="{Binding Joke}" Margin="10,22,0,0" VerticalAlignment="Center" FontSize="30" FontFamily="Comic Sans MS" TextWrapping="Wrap"/>

</Window>
